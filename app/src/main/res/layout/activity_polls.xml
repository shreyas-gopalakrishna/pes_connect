<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24dp"
                android:text="1 . Which singer do you want for AT'16?"/>
            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question31">

                <RadioButton
                    android:id="@+id/radio11"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:text='Sunidhi Chauhan'
                    android:textSize="18dp"
                    />
                <RadioButton
                    android:id="@+id/radio12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text='Raghu Dixit'
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/radio13"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:text='Salim-Suliaman'
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/radio14"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:text='Shruthi Nagraj'
                    android:textSize="18dp"/>
            </RadioGroup>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Submit"
                    android:id="@+id/button1s"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/white"
                    android:background="@drawable/edittext_rounded_corners"
                    android:layout_marginBottom="6dp"/>
                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Result"
                    android:id="@+id/button1r"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/white"
                    android:background="@drawable/edittext_rounded_corners"
                    android:layout_toRightOf="@+id/button1s"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="6dp"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question2"
                android:textColor="@color/colorPrimary"
                android:textSize="24dp"
                android:text="2 . Should Girls be allowed in the college after 5:30?"/>
            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/question31"
                android:layout_below="@+id/question31">

                <RadioButton
                    android:id="@+id/radio21"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:text='Yes, Absolutely'
                    android:textSize="18dp"
                    />
                <RadioButton
                    android:id="@+id/radio22"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:text='No'
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/radio23"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='May be with HOD Permission'
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/radio24"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:text='Cant Say'
                    android:textSize="18dp"/>
            </RadioGroup>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Submit"
                    android:id="@+id/button2s"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/white"
                    android:background="@drawable/edittext_rounded_corners"
                    android:layout_marginBottom="6dp"/>
                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Result"
                    android:id="@+id/button2r"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/white"
                    android:background="@drawable/edittext_rounded_corners"
                    android:layout_toRightOf="@+id/button2s"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="6dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question3"
                android:textColor="@color/colorPrimary"
                android:textSize="24dp"
                android:text="3 .  Should attendence have MARKS ?"/>
            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question31">

                <RadioButton
                    android:id="@+id/radio31"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:text='Yes'
                    android:textSize="18dp"
                    />
                <RadioButton
                    android:id="@+id/radio32"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:text='No'
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/radio33"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='May Be'
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/radio34"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:text='No Opinion'
                    android:textSize="18dp"/>
            </RadioGroup>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Submit"
                    android:id="@+id/button3s"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/white"
                    android:background="@drawable/edittext_rounded_corners"
                    android:layout_marginBottom="6dp"/>
                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Result"
                    android:id="@+id/button3r"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/white"
                    android:background="@drawable/edittext_rounded_corners"
                    android:layout_toRightOf="@+id/button3s"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="6dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>